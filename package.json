{
  "name": "@waldbaer/node-red-persistent-values",
  "version": "1.6.0",
  "description": "A user-friendly abstraction of the Node-RED context stores.",
  "author": "waldbaer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waldbaer/node-red-persistent-values.git"
  },
  "keywords": [
    "node-red",
    "context",
    "persistence",
    "persistency",
    "state",
    "config",
    "storage"
  ],
  "node-red": {
    "version": ">=1.3.0",
    "nodes": {
      "persistent values config": "nodes/persistent-values-config.js",
      "persistent value": "nodes/persistent-value.js"
    }
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "uuid": ">=9.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "node-red": "^3.0.2",
    "node-red-node-test-helper": "^0.3.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "require-jsdoc": "off",
      "max-len": [
        2,
        {
          "code": 140,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ],
      "indent": [
        "error",
        2
      ]
    },
    "plugins": [
      "html"
    ]
  },
  "scripts": {
    "test": "mocha \"test/**/*_spec.js\"",
    "coverage": "nyc --reporter=lcov npm test",
    "coverage_local": "nyc npm test",
    "node-red-dev-validate": "node-red-dev validate -p ."
  }
}
